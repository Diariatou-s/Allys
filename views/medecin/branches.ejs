<% layout('./layouts/boilerplate')%>

<form action="/branche/nouv_branche" method="POST" class="validated-form" novalidate>
    <div class="row my-1">
        <div class="col-md">
            <label for="nom" class="form-label">Nom</label>
            <br>
            <input class="form-control form-control-sm" type="text" name="branche[nom]" id="nom"
                required />
        </div>
    </div>
    <br>
    <div class="row my-1">
        <div class="col-md">
            <label for="symptome" class="form-label">Symptome</label>
            <br>
            <% for (let symptome of symptomes) {%>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="branche[symptomes]" id="<%= symptome._id %>" value="<%=symptome._id%>">
                    <label class="form-check-label" for="<%= symptome._id %> "><%= symptome.nom %> </label>
                </div>
            <% } %>  
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-5">Valider</button>
</form>