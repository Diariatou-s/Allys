<% layout('./layouts/boilerplate')%>

<form action="/maladie/nouv_maladie" method="POST" class="validated-form" novalidate>
    <div class="row my-1">
        <div class="col-md">
            <label for="nom" class="form-label">Nom</label>
            <br>
            <input class="form-control form-control-sm" type="text" name="maladie[nom]" id="nom"
                required />
        </div>
    </div>
    <br>
    <div class="row my-1">
        <div class="col-md">
            <label for="branche" class="form-label">Branche</label>
            <br>
            <% for (let branche of branches) {%>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="maladie[branches]" id="<%= branche._id %>" value="<%=branche._id%>">
                    <label class="form-check-label" for="<%= branche._id %> "><%= branche.nom %> </label>
                </div>
            <% } %>  
        </div>
    </div>
    <br>
    <div class="row my-1">
        <div class="col-md">
            <label for="symptome" class="form-label">Symptome</label>
            <br>
            <% for (let symptome of symptomes) {%>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="maladie[symptomes]" id="<%= symptome._id %>" value="<%=symptome._id%>">
                    <label class="form-check-label" for="<%= symptome._id %> "><%= symptome.nom %> </label>
                </div>
            <% } %>  
        </div>
    </div>
    <br>
    <div class="row my-1">
        <div class="col-md">
            <label for="predispo" class="form-label">Predispositions</label>
            <br>
            <% for (let predispo of predispos) {%>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="maladie[predispos]" id="<%= predispo._id %>" value="<%=predispo._id%>">
                    <label class="form-check-label" for="<%= predispo._id %> "><%= predispo.nom %> </label>
                </div>
            <% } %>  
        </div>
    </div>
    <br>
    <div class="row my-1">
        <div class="col-md">
            <label for="excomp" class="form-label">Examens compl√©mentaires</label>
            <br>
            <% for (let excomp of excomps) {%>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="maladie[excomps]" id="<%= excomp._id %>" value="<%=excomp._id%>">
                    <label class="form-check-label" for="<%= excomp._id %> "><%= excomp.nom %> </label>
                </div>
            <% } %>   
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-5">Valider</button>
</form>




 